{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "lib": ["es2015"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/remotion/*": ["src/remotion/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/types/*": ["src/types/*"],
      "@/animations/*": ["src/animations/*"],
      "@/config/*": ["src/config/*"]
    }
  },
  "exclude": ["remotion.config.ts", "legacy"]
}
